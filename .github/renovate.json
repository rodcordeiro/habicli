{
  "branchPrefix": "updates/",
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "updateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "assignAutomerge": true,
  "assignees": [
    "@rodcordeiro"
  ],
  "labels": [
    "dependencies"
  ],
  "recreateClosed": true,
  "rebaseWhen": "conflicted",
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "assignees": [
      "@rodcordeiro"
    ]
  },
  "extends": [
    "config:base",
    ":dependencyDashboard",
    "github>whitesource/merge-confidence:beta",
    "github>rodcordeiro/.github:renovate"
  ]
}
